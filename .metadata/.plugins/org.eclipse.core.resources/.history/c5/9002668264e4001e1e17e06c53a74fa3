package Dsa;

public class SpiralMatrixII {

	public static void main(String[] args) {
		int A=0;
		int[][] arr = new int[A][A];
		arr=get2DMatrix(A);
	}

	public static int[][] get2DMatrix(int A) {
		int rmin = 0;
		int rmax = A;
		int cmin = 0;
		int cmax = A;
		
		int count = 0;
		
		int[][] arr = new int[A][A];

		if (A == 0)
			return null;

		if (count < A * A) {
			for (int i = cmin; i < cmax; i++) {
				if (count < A * A)
					arr[rmin][i] = count++;
			}
			rmin++;

			for (int i = rmin; i < rmax; i++) {
				if (count < A * A)
					arr[i][cmax] = count++;
			}
			cmax--;

			for (int i = cmax; i > cmin; i++) {
				if (count < A * A)
					arr[rmax][i] = count++;
			}
			rmax--;

			for (int i = rmax; i > rmin; i++) {
				if (count < A * A)
					arr[i][cmin] = count++;
			}
			cmin++;
		}

		return arr;
	}
}
