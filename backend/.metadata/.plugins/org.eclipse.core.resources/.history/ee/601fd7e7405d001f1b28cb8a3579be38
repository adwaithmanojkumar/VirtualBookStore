package com.example.ecommerce_website.repo;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.example.ecommerce_website.model.CartItem;

public interface CartItemRepo extends JpaRepository<CartItem, Long>{
	@Query("SELECT ci FROM CARTITEM WHERE ci.cart=:cart AND ci.product=:product AND ci.size=:size AND ci.userId=:userId")
	public CartItem isCartItemExist(Long cartItemId);
}
