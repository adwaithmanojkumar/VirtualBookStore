package com.example.ecommerce_website.repo;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.example.ecommerce_website.model.Category;

public interface CategoryRepo extends JpaRepository<Category, Long>{
	public Category findByName(String name);
	
	@Query("SELECT c from Category c WHERE c.name=:name AND c.parentCategoryName=:parentCategory")
	public Category findByNameAndParent(@Param("name") String name,@Param("parentCategoryName") Category parentCategory);
}
