package com.example.ecommerce_website.repo;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.example.ecommerce_website.model.Cart;
import com.example.ecommerce_website.model.CartItem;
import com.example.ecommerce_website.model.Product;

public interface CartItemRepo extends JpaRepository<CartItem, Long>{
	@Query("SELECT ci FROM CARTITEM WHERE ci.cart=:cart AND ci.product=:product AND ci.size=:size AND ci.userId=:userId")
	public CartItem isCartItemExist(@Param("cart") Cart cart,@Param("product") Product product,@Param("size") String size,@Param("userId") Long userId);
}
